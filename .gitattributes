# Set default behavior to automatically normalize line endings
* text=auto

# The gitattributes file itself should use LF
.gitattributes text eol=lf

# Force batch scripts to use CRLF
*.bat text eol=crlf

# Force bash scripts to use LF
*.sh text eol=lf

# Force all JS/TS files to use LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# Force package files to use LF
package.json text eol=lf
package-lock.json text eol=lf

# Force prisma files to use LF
*.prisma text eol=lf

# Force markdown files to use LF
*.md text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
